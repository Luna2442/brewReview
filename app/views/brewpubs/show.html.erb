<h1><%= @brewpub.name %></h1>
<h1><%= @brewpub.address %></h1>
<h1><%= @brewpub.city %></h1>
<h1><%= @brewpub.state %></h1>
<h1><%= @brewpub.zip %></h1>
<h1><%= @brewpub.description %></h1>
<br/>

<%  if user_signed_in? && current_user.admin?%>
<%= link_to "Edit Brewpub", edit_brewpub_path %>
<%end%>



<h2> Add a Review</h2>
<%= form_for [@brewpub, @review] do |f| %>
  <%= f.label :rating %><br/>
  <%= f.text_field :rating %><br />

  <%= f.label :header %><br/>
  <%= f.text_field :header %><br />

  <%= f.label :body %><br/>
  <%= f.text_area :body %><br />

  <%= f.submit 'Add Review' %>
<% end %>
<br/>
<h2>REVIEWS</h2>

<ul>
  <% if @reviews %>
  <% @reviews.each do |review| %>
  <ul>
    <h2>Rating: <%= review.rating %> </h2>
    <h2> <%= review.header %> </h2>
    <p>  <%= review.body %> </p>
  </ul>
  <% if user_signed_in? && current_user.admin?%>
  <%= button_to "Delete This Review", brewpub_review_path( @brewpub, review), method: :delete %>
  <%end%>
  <% end %>
  <% end %>
</ul>
