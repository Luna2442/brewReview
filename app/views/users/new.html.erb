<h1>New User Form</h1>

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %><br />
  <%= f.label :password, "Password" %>
  <%= f.text_field :password %><br />
  <%= f.label :password_confirmation, "Password confirmation" %>
  <%= f.text_field :password_confirmation %><br />
  <%= f.submit "Add user" %>
<% end %>
